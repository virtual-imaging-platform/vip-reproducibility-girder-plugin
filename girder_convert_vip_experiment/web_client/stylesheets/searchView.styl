
.conversion-form-container.g-settings-form-container
    background-color #ffffff
    border: none 

.form-group.g-query-value-form-group  
    width 200px
    margin-left 52px
    color: #115592

.form-group.meta-search-form-group.g-meta-select
    margin-left 225px

.btn.btn-search.btn-primary
    margin-left 10px

.form.group.query
    margin-top 20px
    
