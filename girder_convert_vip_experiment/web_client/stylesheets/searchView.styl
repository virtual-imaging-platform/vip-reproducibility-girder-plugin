    width 550px
   

label
    margin-right 15px

.form-group.g-query-compose-form-group
    margin-left 231px
    margin-top 45px  

.form-group.condition-meta-search-form-group
    margin-top 45px

#result
    margin 10px
    padding 10px
    border-radius 5px
    font-size: 18px
    font-weight: bold
    width: fit-content

#result.success
    color: green
    border: 1px solid green

#result.error
    color: red
    border: 1px solid red

#result.processing
    color: grey
    border: 1px solid grey

.dropdown-convert
    appearance none
    padding 8px
    font-size 16px
    border 1px solid #ccc
    border-radius 5px
    background-color #fff
    width 200px
    color #333
    cursor pointer
    transition all 0.3s

    &:hover
        border-color #999

    &:focus
        border-color #007bff
        box-shadow 0 0 5px rgba(0, 123, 255, 0.5)

    &::-ms-expand
        display none

    option
        padding 10px
        font-size 16px

    &:disabled
        opacity 0.6
        cursor not-allowed

.group-convert
    display flex
    flex-direction column

.label-convert
    font-size 16px

.convert-title
    font-size 22px
    font-weight bold
    margin-bottom 10px

.convert-subtitle
    font-size 18px
    margin-bottom 10px